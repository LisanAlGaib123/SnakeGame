<Window x:Class="WpfApp.CustomMapWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Custom Map" Height="200" Width="300">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Wprowadź szerokość -->
        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
            <TextBlock Text="Width:" VerticalAlignment="Center" Width="50" />
            <TextBox x:Name="WidthTextBox" Width="100" />
        </StackPanel>

        <!-- Wprowadź wysokość -->
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,10,0,0">
            <TextBlock Text="Height:" VerticalAlignment="Center" Width="50" />
            <TextBox x:Name="HeightTextBox" Width="100" />
        </StackPanel>

        <!-- Przycisk zatwierdzenia -->
        <Button Grid.Row="2" Content="Start Game" HorizontalAlignment="Center" Width="100" Click="StartGameButton_Click" />
    </Grid>
</Window>
